---
import { t } from '../i18n';

const { lang } = Astro.props;
---

<section
  class="relative py-20 text-white"
  style="background-image: url('/hero-banner.jpeg'); background-size: cover; background-position: center;"
>
  <div class="absolute inset-0 bg-black/60"></div>
  <div class="relative mx-auto max-w-6xl px-4 text-center">
    <h1 class="text-4xl font-bold md:text-6xl">{t(lang, 'hero.kicker')}</h1>
    <p class="mt-4 text-lg opacity-80 md:text-xl">
      {t(lang, 'hero.sub')}
    </p>
    <div class="mt-8 flex justify-center gap-4">
      <a
        href="/contact"
        class="rounded-lg bg-blue-600 px-6 py-3 font-medium transition hover:bg-blue-500"
      >
        {t(lang, 'hero.primary')}
      </a>
      <!-- <a
        href="/products"
        class="rounded-lg border border-white px-6 py-3 font-medium transition hover:bg-white hover:text-black"
      >
        Conocer nuestras apps
      </a> -->
    </div>
  </div>
</section>
