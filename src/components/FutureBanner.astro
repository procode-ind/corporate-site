---
import type { Locale } from '../i18n';
import { t } from '../i18n';

// Technology tags configuration - could be moved to i18n files for full internationalization
const TECH_TAGS = [
  'Web',
  'Mobile',
  'Cloudâ€‘Native',
  'Containers',
  'Automated Testing',
  'AI',
  'IoT',
  'Blockchain',
] as const;

interface Props {
  lang?: Locale;
  imageUrl?: string; // Optional background image URL
  technologies?: string[]; // Custom technology list (overrides default)
  className?: string; // Additional CSS classes for the section
}

const {
  lang = 'es',
  imageUrl = '',
  technologies = TECH_TAGS,
  className = '',
} = Astro.props as Props;

// Construct section classes
const sectionClasses = `relative py-16 text-white ${className}`.trim();
---

<section class={sectionClasses} aria-labelledby="future-title">
  <!-- Background layer with optional image and overlay -->
  <div class="absolute inset-0" aria-hidden="true">
    {imageUrl && <img src={imageUrl} alt="" class="h-full w-full object-cover" loading="lazy" />}
    <!-- Gradient overlay for better text readability -->
    <div class="absolute inset-0 from-black/30 via-black/40 to-black/30"></div>
    <!-- Decorative pattern overlay -->
    <div
      class="pointer-events-none absolute inset-0 [background-size:24px_24px] opacity-15 [background:radial-gradient(transparent_1px,_rgba(255,255,255,0.08)_1px)]"
    >
    </div>
  </div>

  <!-- Content container -->
  <div class="relative mx-auto max-w-6xl px-4 text-center">
    <h2 id="future-title" class="text-2xl font-extrabold tracking-tight md:text-3xl">
      {t(lang, 'future.title')}
    </h2>
    <p class="mx-auto mt-3 max-w-3xl opacity-80">
      {t(lang, 'future.body')}
    </p>

    <!-- Technology tags -->
    <div class="mt-6" role="list" aria-label="Technologies we work with">
      <ul class="flex flex-wrap justify-center gap-3 text-sm">
        {
          technologies.map((item) => (
            <li
              class="rounded-full border border-white/20 bg-white/5 px-4 py-2 transition-colors hover:bg-white/10"
              role="listitem"
            >
              {item}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
