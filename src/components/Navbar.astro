---
import type { Locale } from '../i18n';
import LangSwitcher from './LangSwitcher.astro';
const { lang } = Astro.props as { lang?: Locale };
---

<header class="sticky top-0 z-50 border-b border-[var(--color-border)] bg-black/30 backdrop-blur">
  <nav class="container-xl flex items-center justify-between py-3">
    <a href={`/${lang}`} class="flex items-center gap-2">
      <img src="/logo-no-bg.png" alt="ProCode Ind" class="h-14" />
      <span class="font-semibold">ProCode Ind</span>
    </a>
    <div class="flex items-center gap-3">
      <LangSwitcher {lang} />
    </div>
  </nav>
</header>
