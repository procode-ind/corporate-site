---
import type { Locale } from '../../i18n';
import Navbar from '../../components/Navbar.astro';
import Hero from '../../components/Hero.astro';
import Footer from '../../components/Footer.astro';
import FutureBanner from '../../components/FutureBanner.astro';

import '../../styles/global.css';
import Services from '../../components/Services.astro';
import Consulting from '../../components/Consulting.astro';
import Contact from '../../components/Contact.astro';
import Industries from '../../components/Industries.astro';
import CTA from '../../components/CTA.astro';

const {
  title = 'ProCode Ind',
  description = 'Industria profesional de código: vamos de la mano hacia el futuro—plataformas, líneas de producción de software y consultoría estratégica en cloud, k8s, blockchain y AI.',
} = Astro.props as { lang?: Locale; title?: string; description?: string };

const base = 'https://www.procodeind.com';
const alternates = {
  en: `${base}/en`,
  es: `${base}/es`,
};

export function getStaticPaths() {
  return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
---

<html {lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <!-- hreflang -->
    <link rel="alternate" href={alternates.en} hreflang="en" />
    <link rel="alternate" href={alternates.es} hreflang="es" />
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex min-h-screen flex-col">
    <Navbar {lang} />
    <main>
      <Hero lang={lang as Locale} />
      <FutureBanner lang={lang as Locale} />
      <Services lang={lang as Locale} />
      <Consulting lang={lang as Locale} />
      <Industries lang={lang as Locale} />
      <CTA lang={lang as Locale} />
    </main>
    <Contact {lang} />
    <Footer {lang} />
  </body>
</html>
