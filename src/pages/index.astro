---
import type { Locale } from '../i18n';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css';

const {
  lang = 'en',
  title = 'ProCode Ind',
  description = '',
} = Astro.props as { lang?: Locale; title?: string; description?: string };

const base = 'https://www.procodeind.com'; // c√°mbialo cuando publiques
const alternates = {
  en: `${base}/en`,
  es: `${base}/es`,
};
---

<html {lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <!-- hreflang -->
    <link rel="alternate" href={alternates.en} hreflang="en" />
    <link rel="alternate" href={alternates.es} hreflang="es" />
    <link rel="alternate" href={alternates[lang]} hreflang="x-default" />
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex min-h-screen flex-col">
    <Navbar {lang} />
    <slot />
    <Footer {lang} />
  </body>
</html>
